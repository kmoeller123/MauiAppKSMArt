<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             xmlns:local="clr-namespace:MauiAppKSMArt.ViewsModels"
              xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiAppKSMArt.MainPage" Background="WhiteSmoke" >
    <ContentPage.BindingContext>
        <local:MainPageViewModel  />
    </ContentPage.BindingContext>
    

    <ScrollView>
        <VerticalStackLayout Background="WhiteSmoke"
            Padding="0"
            Spacing="2">
            <!--<Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />-->

            <Label
                Text="Art Marketplace" FontSize="Large" TextColor="LightSkyBlue"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level3" >   
            </Label>

            <!--<Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />-->

            <Grid  WidthRequest="300" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Text="prev"
                        Grid.Column="0" HeightRequest="20" Command="{Binding MainPagePrevButtonClick}" IsEnabled="{Binding isEnabled}" TextColor="Blue" BackgroundColor="White" Opacity=".5"
                        Grid.Row="1" Margin="5" >
                    <!--<Button.Shadow>
                        <Shadow Brush="Gray" Offset="20,20" Radius="20"/>
                    </Button.Shadow>-->                  
                </Button>

                <Button x:Name="CounterBtn" Grid.Column="1" Grid.Row="1" Margin="5" WidthRequest="60" TextColor="Blue" BackgroundColor="White" Opacity=".5"
                    Text="load" SemanticProperties.Hint="Load Data"
                    Command="{Binding MainPageGetButtonClick}"
                    HorizontalOptions="Fill" >                   
                </Button>

                <Button Text="next" Command="{Binding MainPageNextButtonClick}" IsEnabled="{Binding isEnabled}" TextColor="Blue" BackgroundColor="White" Opacity=".5"
                        Grid.Column="2" Grid.Row="1" Margin="5">                 
                </Button>
                
            </Grid>

            <Image x:Name="myImage" Source="{Binding MyImageSource}" MaximumHeightRequest="800" Margin="3" >
                <Image.Shadow>
                    <Shadow Brush="Gray" Offset="20,20" Radius="60"/>
                </Image.Shadow>
            </Image>

            <FlexLayout HorizontalOptions="Center" BackgroundColor="Transparent" Margin="0" Opacity=".8" >
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding SelectedArtObject.UserName}" TextColor="Black" FontSize="Small"  Margin="5,0,0,0" />
                    <Label Text="{Binding SelectedArtObject.Title}"    TextColor="Black" FontSize="Small" Margin="4,0,0,0" />
                    <Label Text="{Binding SelectedArtObject.Price, StringFormat= '${0:F2}'}"    TextColor="Black" FontSize="Small" Margin="4,0,5,0" />
                </HorizontalStackLayout>   
            </FlexLayout>


        </VerticalStackLayout>
        
        
    </ScrollView>

</ContentPage>
