<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppKSMArt.UploadBlobToAzure"
             xmlns:local="clr-namespace:MauiAppKSMArt.ViewsModels"
             Title="Upload Blob To Azure">

    <ContentPage.BindingContext>
        <local:UploadBlobToAzureViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="Btn_upload" Grid.Column="1" Grid.Row="1" Margin="5" WidthRequest="60"
            Text="Load Data" SemanticProperties.Hint="Load Data"
            Command="{Binding UploadImagesBlobButtonClick}"
            HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>